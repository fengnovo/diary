.content{
  background-color: #3A3A3A;
  min-height: 100%;
}
.movie{
  display: flex;
  flex-direction: row;
  margin: 0 5px;
}

.pic image {
  width: 100px;
  height: 150px;
  padding-top: 10px;
}

.movie-info {
  padding-left: 14px;
}
.base-info {
  color: #FFFFFF;
  font-size: 12px;
  padding-top: 20px;
  line-height: 20px;
}

.hr {
  height: 2px;
  width: 100%;
  background-color: black;
  border-top: white solid 1px;
  border-bottom: white solid 1px;
  opacity: 0.2; 
}