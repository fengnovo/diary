@import '../movie/movie.wxss';

.search {
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  font-size: 14px;
}

.search input{
  width: 70%;
  border: 1px solid #ccc;
  box-shadow: inset 0 0 10px #ccc;
  color: black;
  background-color: white;
}

.search button {
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10px;
  background-color: orange;
  color: white;
  text-shadow: black 0 1px 0;
}

.input-show {
  padding-left: 20px;
  color: white;
  text-align: center;
  font-size: 12px;
}